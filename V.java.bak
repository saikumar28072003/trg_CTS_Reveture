import java.util.Scanner;

class V
	{
    public static void main(String[] args)
		{
        Scanner s = new Scanner(System.in);
      System.out.println("Enter the number of lines:");
        int n = s.nextInt();  
        for (int i = 1; i <= (n/2+1); i++) 
			{
            for (int j = 1; j <= n; j++)
				{
         if(i==j || i+j==(n+1))
		    {
           System.out.print("V");
			}
			else
			System.out.print("_");
            }
			System.out.println();
		}
				
    }
  }