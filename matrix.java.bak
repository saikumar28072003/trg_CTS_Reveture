import java.util.Scanner;
class matrix 
{
	public static void main(String[] args) 
	{
		Scanner s=new Scanner(System.in);
		System.out.println("enter the lines:");
		int n=s.nextInt();
		
		for(int i=0;i<n;i++)
		{
			for(int j=0;j<n-i;j++)
		 { 
				if(i==0 || i==n-1 || j==0 || j==n-1 || i==j || i+j==n-1)
			 {
				System.out.print("x");
			 }
			else
			{
				System.out.print("_");
			}
		 }
		System.out.println();
		}
	}
}
