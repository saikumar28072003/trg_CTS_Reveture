import java.util.Scanner;

class Matrix2 
	{
    public static void main(String[] args)
		{
        Scanner s = new Scanner(System.in);
      System.out.println("Enter the number of lines:");
        int n = s.nextInt();  
        for (int i = 1; i <= n; i++) 
			{
            for (int j = 1; j <= n; j++)
				{
       if (i == 1 || i == n || j == 1  || j == n )//|| i + j == 0)
		{
           System.out.print("x");  
         } 
		 else 
			 {
                    System.out.print("_"); 
                }
            }
            System.out.println();
        }
    }
}
