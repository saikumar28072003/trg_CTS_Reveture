import java.util.Scanner;

class Sdemo {
    public static void main(String[] args) {
        Scanner s = new Scanner(System.in);
        System.out.println("Enter the size for the 'S' pattern:");
        int n = s.nextInt();

        // Ensuring a minimum size for a recognizable "S" pattern
        if (n < 3) {
            System.out.println("Please enter a size of at least 3.");
            return;
        }

        for (int i = 1; i <= n; i++) {
            for (int j = 1; j <= n; j++) {
                // Top horizontal line of "S"
                if (i == 1) {
                    System.out.print("*");
                }
                // Middle horizontal line of "S"
                else if (i == n / 2 + 1) {
                    System.out.print("*");
                }
                // Bottom horizontal line of "S"
                else if (i == n) {
                    System.out.print("*");
                }
                // Left vertical line for the top half of "S"
                else if (i < n / 2 + 1 && j == 1) {
                    System.out.print("*");
                }
                // Right vertical line for the bottom half of "S"
                else if (i > n / 2 + 1 && j == n) {
                    System.out.print("*");
                }
                // Fill remaining spaces with spaces
                else {
                    System.out.print(" ");
                }
            }
            System.out.println();
        }
    }
}
